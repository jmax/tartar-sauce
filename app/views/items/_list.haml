%ul
  - for item in items_set
    %li[item]
      .actions
        - if editable
          = link_to 'Completed!', [:complete, @board, item], :method => :put, :remote => true
        = link_to 'Delete', [@board, item], :method => :delete, :confirm => 'Are you sure?', :remote => true
      - if item.needed_asap?
        %span.asap asap!
      = item.description

